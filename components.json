{
  // Configuration file for shadcn/ui CLI tool
  // Defines project structure, styling preferences, and path aliases for component generation
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default", 
  "rsc": false, 
  "tsx": true, 
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "src/index.css", 
    "baseColor": "slate",
    "cssVariables": true,
    "prefix": "" 
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks"
  }
}