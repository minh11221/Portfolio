{
  // TypeScript configuration for Node.js build tools (Vite)
  // Separate config for build-time code vs application code
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"], 
    "module": "ESNext", 
    "skipLibCheck": true, 

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, 
    "isolatedModules": true, 
    "moduleDetection": "force",
    "noEmit": true, 

    "strict": true, 
    "noUnusedLocals": false, 
    "noUnusedParameters": false, 
    "noFallthroughCasesInSwitch": true 
  },
  "include": ["vite.config.ts"] 
}
